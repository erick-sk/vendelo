<%= form_with(url: sessions_path) do |form| %>
  <div class="flex flex-col mb-2">
    <%= form.label :login, "Username or Email" %>
    <%= form.text_field :login, class: "w-full md:w-1/2 rounded", required: true %>
  </div>

  <div class="flex flex-col mb-2">
    <%= form.label :password %>
    <%= form.password_field :password, class: "w-full md:w-1/2 rounded", required: true %>
  </div>

  <%= form.submit "Login", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
<% end %>