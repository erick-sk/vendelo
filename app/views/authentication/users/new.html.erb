<%= form_with(model: @user, class: "contents") do |form| %>
  <%= render "shared/form_errors", form: form %>

  <div class="flex flex-col mb-2">
    <%= form.label :email %>
    <%= form.email_field :email, class: "w-full md:w-1/2 rounded", required: true %>
  </div>

  <div class="flex flex-col mb-2">
    <%= form.label :username %>
    <%= form.text_field :username, class: "w-full md:w-1/2 rounded", required: true %>
  </div>

  <div class="flex flex-col mb-2">
    <%= form.label :password %>
    <%= form.password_field :password, class: "w-full md:w-1/2 rounded", required: true %>
  </div>

  <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
<% end %>